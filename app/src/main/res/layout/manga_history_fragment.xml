<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/fragment_background"
                android:orientation="vertical">

    <com.danilov.supermanga.core.view.CTextView
        android:id="@+id/empty_placeholder"
        android:textColor="?attr/empty_list_placeholder_text"
        android:textSize="16sp"
        android:text="👩🏽‍🎤 Вы ничего не читаете 👨🏽‍🎤"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.danilov.supermanga.core.widget.AutoFitRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="@dimen/grid_item_width"
        android:listSelector="#00000000"
        android:numColumns="auto_fit"/>

    <ProgressBar
        android:id="@+id/history_progress_bar"
        style="@style/Manga.RoundProgressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>